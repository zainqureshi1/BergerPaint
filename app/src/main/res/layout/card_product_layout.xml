<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_card_height"
        app:cardBackgroundColor="@color/slight_opaque"
        app:cardElevation="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageViewProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/margin_tiny"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium_upper"
                    android:lines="1" />

                <TextView
                    android:id="@+id/textViewProductDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewProductTitle"
                    android:layout_above="@+id/buttonProductBuy"
                    android:layout_margin="@dimen/margin_tiny"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small_upper"
                    android:maxLines="4" />

                <Button
                    android:id="@+id/buttonProductLearnMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin_small"
                    android:ems="5"
                    android:text="@string/learn_more"
                    android:textColor="@color/white"
                    android:background="@drawable/bordered_button" />

                <Button
                    android:id="@+id/buttonProductBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/buttonProductLearnMore"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:ems="5"
                    android:text="@string/buy"
                    android:textColor="@color/white"
                    android:background="@drawable/bordered_button"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>